# editorconfig.org

# top-most EditorConfig file
root = false

# Default settings:
# A newline ending every file
# Use 4 spaces as indentation
[*]
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf

# Xml project files
[*.{xml,ruleset}]
indent_size = 2
charset = utf-8

# YAML config files
[*.{yml,yaml,json}]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf

[*.{js,ts,jsx,tsx,cjs,mjs}]
indent_size = 2
